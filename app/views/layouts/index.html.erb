<h2>Choose your Destiny</h2>

<hr>

<h4>Chat Room:</h4>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="container panel-body panel-custom" id="talk" onload="scroll_to_bottom();">
        <%= render @messages %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <% if current_user %>
    <div id="footer">
      <div class="container">
        <div class="col-md-6">
          <%= form_for @message, remote: true do |f| %>
          <div class="form-group">
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.text_field :body, class: "form-control", id: 'message-field'  %>
          </div>
          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
